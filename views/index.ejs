<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />
	
	<title> iDrink</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>



	<!-- Header -->

	<%- include('./partials/header.ejs') %> 


	<!-- /Header -->
	
	<!-- Banner -->
	
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
				<% for (let i= 0; i < 4; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products">
						
							<figure class="product-box_image">
								
								<img src="<%=drinks[i].cover %>" alt="<%=drinks[i].description %>">
							</figure>
							<article class="product-box_data">
								<h2><%=drinks[i].title %></h2>
								<p><%=drinks[i].description %></p>
								<p>Comentarios: 12</p>
							</article>

					</a>
				</section>
			</div>
		<% } %>
			
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<% for (let i= 5; i < 9; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products">
							
								<figure class="product-box_image">
									
									<img src="<%=drinks[i].cover %>" alt="<%=drinks[i].description %>">
								</figure>
								<article class="product-box_data">
									<h2><%=drinks[i].title %></h2>
									<p><%=drinks[i].description %></p>
									<p>Comentarios: 12</p>
								</article>
	
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
  <%- include('./partials/footer.ejs') %> 
	
	<!-- /footer -->
