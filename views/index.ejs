
	<!-- Header -->
<%- include('./partials/header.ejs') %>

	<!-- /Header -->
	
	<!-- Banner -->
	
	<!-- /Banner -->

	<!-- Novedades -->

	
	<div class="container products-wrapper">
		<i class="fa-solid fa-champagne-glasses"></i>
		<div class="row">
			<div class="col-12">
				<h2 class='h2' class="products-title">Novedades</h2 class='h2'>
			</div>
			<!-- Show the "ultimos" products -->
				<% for (let i= 0; i < 4; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products">
						
							<figure class="product-box_image">
								
								<img src="<%=drinks[i].cover %>" alt="<%=drinks[i].description %>">
							</figure>
							<article class="product-box_data">
								<h2 class='h2'><%=drinks[i].title %></h2 class='h2'>
								<p><%=drinks[i].description %></p>
								<p>Comentarios: 12</p>
							</article>

					</a>
				</section>
			</div>
		<% } %>
			
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class='h2' class="products-title">Más comentados</h2 class='h2'>
			</div>
			<% for (let i= 5; i < 9; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products">
							
								<figure class="product-box_image">
									
									<img src="<%=drinks[i].cover %>" alt="<%=drinks[i].description %>">
								</figure>
								<article class="product-box_data">
									<h2 class='h2'><%=drinks[i].title %></h2 class='h2'>
									<p><%=drinks[i].description %></p>
									<p>Comentarios: 12</p>
								</article>
	
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->

</div>
	<!-- footer -->
	<%- include('./partials/footer.ejs')%>
	
