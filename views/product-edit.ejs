<!-- Header -->
<%- include('./partials/header.ejs') %> 
<!-- /Header -->

<!-- Novedades -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class='h2' class="products-title">Editar un producto</h2 class='h2'>
		</div>
		<!-- Show the "ultimos" products -->
		
			<div class="form-wrapper">
				<h1 class="formulario1">Editar</h1>
				<form class="form" method="post" action="/products/product-add" enctype="multipart/form-data" >
					<div class="form-item">
						
						<input type="text" name="title" required="required" placeholder="<%= drinks.title %>"></input>
						<input type="text" name="description" placeholder="<%= drinks.description %>"> <br>
						<input type="number" name="price" placeholder="<%= drinks.price %>"> <br>
						<input type="date" name="created_at" id="created_at" placeholder="<%= drinks.created_at %>">
					</div>
					<div class="button-panel">
					<input type="submit" class="button" title="Add product " value="Editar"></input>
				  </div>
		
				</form>
			</div>
		

	</div>
</div>
</div>
<!-- footer -->
<%- include('./partials/footer.ejs')%>
<!-- /footer -->

