							<input type="text" name="title" required="required" placeholder="Nombre del producto"></input>
							<input type="text" name="description" placeholder="Descripción"> <br>
							<input type="number" name="price" placeholder="Precio"> <br>
							<input type="file"	name="cover" placeholder="cover"> 
							
						</div>
						<div class="button-panel">
						<input type="submit" class="button" title="Add product " value="Añadir"></input>
					  </div>
			
					</form>
				</div>
			

